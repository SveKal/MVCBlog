@model IEnumerable<BlogTable>

@{
    ViewData["Title"] = "Index";
}

<h1>Blog</h1>

<form asp-controller="BlogTables" asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by title or category: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]"/>
            <input type="submit" value="Search" class="btn btn-default"/> |
            <a asp-controller="BlogTables" asp-action="Index">All Entries</a>
        </p>
    </div>
</form>
<table class="table table-borderless">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BlogHeadline)
        </th>
        <th>
            <a id="aDate" asp-action="Index" asp-route-sortOrder="@ViewData["DateSort"]">@Html.DisplayNameFor(model => model.BlogDateTime)</a>
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a asp-action="Details" asp-route-id="@item.BlogId">@Html.DisplayFor(modelItem => item.BlogHeadline)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BlogDateTime)
            </td>
        </tr>
    }
    </tbody>
</table>